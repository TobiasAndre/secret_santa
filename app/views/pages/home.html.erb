<div class="row home">
  <div class="center">

    <h4  class="title">Surprise on Secret Santa</h4>
    <h5 class="subtitle">Create your own campaign only with your friends name and email</h5>
    <h5 class="subtitle2">Fast, easy and reliable <i class="material-icons home-icon">favorite</i></h5>
    
    <%= form_tag("/campaigns", method: "post") do %>
      <%= submit_tag("Generate now", class: "waves-effect waves-light btn home-button") %>
    <% end %>

    <% if !@campaigns.nil? %>
      <h5 class="title my-campaigns-title">Your campaigns</h5>
    <% end %>
    <%= render 'shared/campaigns', campaigns: @campaigns %>
    
  </div>
</div>